function hKalender_AnyClick()
{
	if (any_click_move(92, 131, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			if ( !cEdna.SayIfPlayer("Pfui.") )
			{
				player.Say("Heiss.");
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Den brauche ich nicht.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Nein, ich blättere nicht auf nächsten Monat vor.");
		}
		else if (UsedAction(eActOpen) || UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Das lasse ich lieber.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Das verträgt sich nicht mit dem Kalender.");
		}
		else Unhandled();
	}
}

