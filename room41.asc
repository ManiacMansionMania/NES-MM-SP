// Einfahrt (Edison Mansion)
int rand			= 0;
int waittime	= 0;

/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	String seperator = String.Format("\\ **** Einfahrt");
	SetTimer(1, 1);
}

function room_RepExec()
{
	if ( IsTimerExpired(1) )
	{
		rand = Random(2);
		PlaySound(96);
		waittime = (rand + 2) * 40;
		SetTimer(1, waittime);
	}
}


