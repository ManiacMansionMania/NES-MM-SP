function hSteuerung_AnyClick()
{
	if (any_click_move(70, 136, eDirectionLeft))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			if ( !cFred.SayIfPlayer("Das ist die Steuerung für das Teleskop.") )
			{
				player.Say("Wohl die Steuerung für das Teleskop.");
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das geht nicht.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			if ( !cFred.SayIfPlayer("Ich habe keine Münzen bei mir.") )
			{
				player.Say("Da brauche ich wohl Münzen für.");
			}
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Und du glaubst, dass ich dann das Teleskop bedienen kann?");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die ist schon zu.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Die ist nicht beweglich.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Das schaut mir nicht nach einer passenden Münze aus.");
		}
		else Unhandled();
	}
}


