/****************************
*   andere-Funktionen
****************************/
void PlayWaterSound()
{
	AudioChannel *channel = aSound95.Play(eAudioPriorityNormal, eRepeat);
				
	if ( null != channel )
	{
		channel.Volume = 80;
		channel.SetRoomLocation(267, 140);
	}
}


				
