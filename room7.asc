*   Raum-Funktionen
****************************/
function room_Load()
{
	String seperator = String.Format("\\ **** Küche");
	Door[eDoorNumKueche].Init(oTuerFlur, hTuerFlur);
	Door[eDoorNumEsszimmer].Init(oTuerEsszimmer, hTuerEsszimmer);
	
	if ( gb_Wasserhahn )
	{
		PlayWaterSound();
	}
}

function room_Leave()
{
	aSound95.Stop();
}


